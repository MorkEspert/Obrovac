<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/id"
        android:textSize="60sp"
        android:layout_margin="10dp"
        android:text="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/ime1"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:text="Ime"
        app:layout_constraintStart_toEndOf="@id/id"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/prezime1"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:text="Prezime"
        app:layout_constraintTop_toBottomOf="@id/ime1"
        app:layout_constraintStart_toEndOf="@id/id"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/oib1"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:text="OIB"
        app:layout_constraintTop_toBottomOf="@id/prezime1"
        app:layout_constraintStart_toEndOf="@id/id"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/datRodenja1"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:text="Datum roÄ‘enja"
        app:layout_constraintTop_toBottomOf="@id/oib1"
        app:layout_constraintStart_toEndOf="@id/id"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>