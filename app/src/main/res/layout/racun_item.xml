<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/id"
        android:textSize="60sp"
        android:layout_margin="10dp"
        android:text="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/brRacuna1"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:text="Broj računa"
        app:layout_constraintStart_toEndOf="@id/id"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/stanje1"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:text="Stanje računa"
        app:layout_constraintTop_toBottomOf="@id/brRacuna1"
        app:layout_constraintStart_toEndOf="@id/id"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/korisnikR1"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:text="Korisnik"
        app:layout_constraintTop_toBottomOf="@id/stanje1"
        app:layout_constraintStart_toEndOf="@id/id"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/datOtvaranja1"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:text="Datum otvaranja"
        app:layout_constraintTop_toBottomOf="@id/korisnikR1"
        app:layout_constraintStart_toEndOf="@id/id"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>